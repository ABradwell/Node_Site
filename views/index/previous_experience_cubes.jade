block previous_experience_cube
    each employment in past_employment
      .work_cube.mx-2.my-2.align-items-start.flex-column
        .flip-card-inner.shadow.border.border-secondary.border-1
          .flip-card-front.p-3
            .logo_wrapper.w-100.text-center.mb-auto.mt-5
              img.company_logo.mx-auto(style='max-height:120px;', src='/images/' + employment.image_src, alt='Company logo for' + employment.company_name)
            br
            .information_wrapper.my-0.col-12.pb-5
              .text-center.justify-content-center
                p.fw-bold.text-center.my-0 #{employment.position_title}
                p.fw-light.text-center.my-0 #{employment.company_name}
                p.text-secondary.text-center.my-0
                  span #{employment.start_date}
                  |  - 
                  span #{employment.end_date}
          .flip-card-back
            div
              #title_and_header.pt-4.pb-1.px-3.text-center
                h5#position_title.fw-bolder(style='line-height: 0.8;') #{employment.position_title}
                h5#company_name.fw-light(style='line-height: 0.8;') #{employment.company_name}
                h6#time_range.fw-light.text-secondary(style='line-height: 0.8;')
                  span #{employment.start_date}
                  |  - 
                  span #{employment.end_date}
              hr
              p#job_description.px-3 #{employment.job_description}
              .gap-3.px-3
                each tag in employment.tags
                  span.badge.rounded-pill.bg-danger.me-1 #{tag}