extends layout

block content
  html
    head
        title title
        script(href="https://cdn.jsdelivr.net/npm/typed.js@2.0.12")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js", integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM", crossorigin="anonymous")
        script(src='https://code.jquery.com/jquery-3.6.1.min.js', integrity='sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=', crossorigin='anonymous')

        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css", integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi", crossorigin="anonymous")
        link(rel="stylesheet", href="/stylesheets/homepage.css")
        link(rel="stylesheet", href="/stylesheets/carousel.css")
  body
    header
        include components\reduced_header.jade
    section.content.mb-5.ms-5(id='' style='')
      .homepage_title.text-primary.d-flex
        h3.ps-4 Projects
        h3.ps-5.ms-4.text-secondary.fw-light Personal &amp; Academic Projects
    section.content
        .splash_title
        // <div class="container">
        #previous_experience_wrapper.content.d-flex.align-items-stretch.justify-content-center.flex-wrap
            each project in projects
                .work_cube.shadow.mx-3.my-4.border.border-secondary.border-1.p-1.align-items-start.flex-column(style='width:325px; height:400px;')
                .flip-card-inner
                    .flip-card-front
                        .logo_wrapper.w-100.text-center.mb-auto.mt-3
                            img.project_logo.mx-auto(style='max-height:200px; max-width: 300px;' src='/images/'+project.project_image_string alt='Project logo for '+project.project_title)
                        br
                        .information_wrapper.my-0.col-12
                            .text-center.justify-content-center
                                p.fw-bold.text-center.my-0(text=project.project_name)
                        hr
                        #associated_tags_wrapper.mx-auto.ps-2
                        //- div
                        //-     p.mb-2 Related Tags...
                        //-     each tag
                        //-     span.tag_btn.px-auto.mx-1.badge.rounded-pill.border.border-primary.text-primary(th:each='tag, tagIterStat : ${alltags[projectStat.index]}' th:text='${tag}')
                .flip-card-back.px-2.d-flex
                    .align-self-center.p-2.bd-highlight.text-center(style='height: 100px')
                    span#subtitle.fw-bolder(style='line-height: 0.8;' text=project.project_sub_title)
                    hr
                    // <a class="btn btn-outline-dark" href=project.project_link target="_blank">View Project</a>
                    a.btn.btn-lg.btn-outline-dark.w-100(href='/controller/projectPage?id='+project.project_id role='button') View
    footer#footer.mt-5
        include components\footer.jade
