extends layout

block content
  html
    head
      title title
      
      script(src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12")
      script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js", integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM", crossorigin="anonymous")
      script(src='https://code.jquery.com/jquery-3.6.1.min.js', integrity='sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=', crossorigin='anonymous')

      link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css", integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi", crossorigin="anonymous")
      link(rel="stylesheet", href="/stylesheets/homepage.css")
      link(rel="stylesheet", href="/stylesheets/carousel.css")
      
    body.text-white.p-0.m-0
      section#splash_header.content.mb-5
        #splash_wrapper.mx-auto(style='max-width:1500px;')
          .px-3.px-md-4.px-lg-5.mb-5
            #splash_title.text-white.px-3.px-md-4.px-lg-5
              #name_wrapper.pt-5
                h1#splash_name.fw-bolder.text-white.m-0
                  | Aiden
                  br
                  span(style='font-size:100px') Stevenson
                  br
                  | Bradwell
                br
              #title_wrapper.mt-4
                h3
                  span.element
          .mt-5
            nav.navbar.sticky-top
              #button_float.d-flex.justify-content-between.mt-5.px-5.px-md-1.pb-3.mx-auto(style='max-width:800px')
                #first-btn.centered
                  a.btn.btn-lg.h-100.btn-outline-light.fw-light.centered-btn(href='#projects_link') Projects
                #second-btn
                  a.btn.btn-lg.h-100.btn-outline-light.fw-light.ms-lg-5.ms-md-3.ms-2.centered-btn(href='#experience_link') Work Experience
                #third-btn
                  a.btn.btn-lg.h-100.btn-outline-light.fw-light.ms-lg-5.ms-md-3.ms-2.centered-btn(href='/controller/Resume') Resume & About Me
                #fourth-btn
                  a.btn.btn-lg.h-100.btn-outline-light.fw-light.ms-lg-5.ms-md-3.ms-2.centered-btn(href='/controller/Articles') Essays & Articles
      hr#projects_link.border.border-darl.border-1
      section.projects.homepage_content.mx-auto.text-dark.mt-5.px-3.px-md-4.px-lg-5
        .homepage_title.text-primary 
          h3.ps-4 Highlighted Projects 
        #projects_carousel_wrapper
      #more_projects_option.text-center
        .mx-auto
          a.font-lighter.btn.btn-lg.btn-round.btn-outline-secondary(href='/controller/Projects') See More Projects
      hr#experience_link.border.border-dark.border-1
      section.projects.homepage_content.mx-auto.text-dark.my-5.px-3.px-md-4.px-lg-5
        .homepage_title.text-primary.d-flex.pb-0.mb-0
          h3.ps-4 Work Experience
          h3.ps-5.ms-4.text-secondary.fw-light 2 & Â½ Years In-field
        div.text-secondary
          p.ps-4.mt-0.pt-0 Tap on a position to see more information!
        div
          #previous_experience_wrapper.content.d-flex.align-items-stretch.justify-content-center.flex-wrap
      hr#articles_link.border.border-dark.border-1
      section.articles.homepage_content.mx-auto.text-dark.mt-5.px-3.px-md-4.px-lg-5.mb-3
        .homepage_title.text-primary
          h3.ps-4 Essays &amp; Articles
        div
          #articles_wrapper.content.d-flex.align-items-stretch.justify-content-center.flex-wrap
      #more_articles_option.text-center.mb-5
        .mx-auto
          a.font-lighter.btn.btn-lg.btn-round.btn-outline-secondary(href='/controller/Articles') See More Articles
    footer#footer.mt-5
      include components/footer.jade
      
    script(src='/javascripts/type_script.js', defer='')
    script(src='/javascripts/button_float.js', defer='')
    script(src='/javascripts/work_cube.js', defer='')

    script.
      $(function() {
        var projects_carousel_request = new XMLHttpRequest();
        projects_carousel_request.open("GET", "/controller/getProjectCarousel", true);
        projects_carousel_request.onload = function() {
          $("#projects_carousel_wrapper").append(projects_carousel_request.responseText);
          $("#project_carousel").find(".carousel-item")[0].classList.add("active");
          console.log("RETURNED AND APPENDED.");
        }
        projects_carousel_request.send();


        var work_cubes_request = new XMLHttpRequest();
        work_cubes_request.open("GET", "/controller/getEmploymentCubes", true);
        work_cubes_request.onload = function() {
          $("#previous_experience_wrapper").append(work_cubes_request.responseText);
          console.log("RETURNED AND WORK APPENDED.");
        }
        work_cubes_request.send();


        var articles_request = new XMLHttpRequest();
        articles_request.open("GET", "/controller/getArticleCarousel", true);
        articles_request.onload = function() {
          $("#articles_wrapper").append(articles_request.responseText);
          $("#article_carousel").find(".carousel-item")[0].classList.add("active");
            console.log("RETURNED AND ART APPENDED.");
        }
        articles_request.send();


      });



  
